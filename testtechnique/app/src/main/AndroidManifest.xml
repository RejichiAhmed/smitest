<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smi.test">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.smi.test.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestTechnique">
        <activity
            android:name=".ui.auth.SignInActivity"
            android:launchMode="singleTop"
            android:theme="@style/SplashFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.signup.SignUpActivity"
            android:launchMode="singleTop"
            android:theme="@style/SplashFullScreen">
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/SplashFullScreen">
        </activity>

        <activity
            android:name=".ui.brand.BrandActivity"
            android:launchMode="singleTop"
            android:theme="@style/SplashFullScreen">
        </activity>
    </application>

</manifest>